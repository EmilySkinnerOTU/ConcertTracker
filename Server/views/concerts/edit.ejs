<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!--Edit page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
<!-- grabs stored data that can be altered -->
              <div class="form-group">
                <label for="nameTextField">Artist </label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Artist name"
                name="name" 
                value="<%= concerts.Artist %>"
                required>
              </div> 

              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control"
                id="GenreTextField"
                placeholder="Enter the  Genre"
                name="Genre" 
                value="<%= concerts.Genre %>"
                required>
              </div> 

              <div class="form-group">
                <label for="DateTextField">Year</label>
                <input type="text" class="form-control"
                id="DateTextField"
                placeholder="Enter the Date of tehe Concert"
                name="Date" 
                value="<%= concerts.Date %>"
                required>
              </div> 

              <div class="form-group">
                <label for="descTextField">Location</label>
                <textarea type="text" class="form-control"
                id="LocationextField"
                placeholder="Enter the Location of the concert"
                name="Location" required>
                <%= concerts.Location %>
                </textarea>
              </div> 

              <div class="form-group">
                <label for="Cost1">Cost</label>
                <input type="number" class="form-control"
                id="Cost1"
                placeholder="Enter the cost of the concerts"
                name="Cost" 
                value="<%= concerts.Cost %>"S
                required>
              </div> 
                <br>
                <!-- Submit alterations -->
              <button class="btn-btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>
<!-- go back to concerts page -->
              <a href="/concerts-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>