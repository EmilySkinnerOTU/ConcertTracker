<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <!-- Add page -->
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <!-- creates text fields for users to input data into-->

              <div class="form-group">
                <label for="ArtistTextField">Artist </label>
                <input type="text" class="form-control" id="ArtistTextField" 
                placeholder="Enter the Artist" name="Artist" required>
              </div> 

              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Enter the Genre" name="Genre" required>
              </div> 

              <div class="form-group">
                <label for="DateTextField">Year</label>
                <input type="text" class="form-control"
                id="DateTextField"
                placeholder="Enter the Date"
                name="Date" required>
              </div> 

              <div class="form-group">
                <label for="LocationTextField">Location</label>
                <textarea type="text" class="form-control"
                id="LocationTextField"
                placeholder="Enter the Location"
                name="Location" required></textarea>
              </div> 

              <div class="form-group">
                <label for="Cost1">Cost</label>
                <input type="number" class="form-control"
                id="Cost1"
                placeholder="Enter the Cost of a ticket"
                name="Cost" required>
              </div> 
                <br>
                <!-- Submit inserted data -->
              <button class="btn-btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>
                <!-- Cancel task -->
              <a href="/concerts-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>